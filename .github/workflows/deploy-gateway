name: Deploy Gateway Service

on:
  workflow_dispatch:
  workflow_run:
    workflows: ["Build and Push Gateway Docker Image"]
    types:
      - completed

jobs:
  deploy:
    if: ${{ github.event.workflow_run.conclusion == 'success' }}
    runs-on: ubuntu-latest
    permissions:
      contents: write
    
    steps:
      - name: Checkout repository
        uses: actions/checkout@v4

      - name: Change Gateway service's manifests image's version
        run: |
          sed -i "s|image: ghcr.io/farzan-kh/guddy-cn/gateway:.*|image: ghcr.io/farzan-kh/guddy-cn/gateway:${GITHUB_SHA}|" k8s/gateway-service.yaml

      - name: install kubectl
        uses: azure/setup-kubectl@v3
        with:
          version: 'latest'

      - name: Commit updated manifests
        run: |
          git config user.name "github-actions"
          git config user.email "actions@github.com"
          git add k8s/gateway-service.yaml
          git diff-index --quiet HEAD || git commit -m "CI: update gateway-service image to ${GITHUB_SHA}"
          git push origin main

      - name: Set up Kubeconfig
        run: |
          mkdir -p $HOME/.kube
          echo "${{ secrets.KUBE_CONFIG_DATA }}" | base64 --decode > $HOME/.kube/config

      - name: Apply Gateway service manifests
        run: |
          kubectl apply -f k8s/gateway-service.yaml -n guddy
          kubectl rollout status deployment/gateway-service -n guddy